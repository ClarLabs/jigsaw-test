{
	"exclude": [
		"build/**/*"
	],
	"include": [
		"src/**/*"
	],
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es2019",
		"experimentalDecorators": false,
		"emitDecoratorMetadata": false,
		"outDir": "./build",
		"rootDir": "./src",
		"allowJs": false,
		"alwaysStrict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"sourceMap": true,
		"typeRoots": [
			"node_modules/@types/"
		],
		"types": [
			"node"
		],
		"paths": {
			"*": [
				"*",
				"src/*"
			]
		}
	}
}